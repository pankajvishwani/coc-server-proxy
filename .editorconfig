
# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,json,css,html}]
charset = utf-8

# 2 space indentation
[*.{md}]
indent_style = space
indent_size = 2

# Indentation override for all JS, JSON, CSS, HTML, LESS 
[*.{js,json,css,html,less,handlebars,eslintrc.json}]
indent_style = tab 
indent_size = 2

# package.json
[package.json]
indent_style = space
indent_size = 2
